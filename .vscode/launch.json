{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Bot",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/bot/botInitializer.js",
      "console": "internalConsole"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch via NPM - Test",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "test"]
    }
  ]
}
